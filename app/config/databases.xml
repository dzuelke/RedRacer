<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
	xmlns="http://agavi.org/agavi/config/parts/databases/1.0">

	<ae:configuration>
		<databases default="doctrine">

			<database name="doctrine" class="AgaviDoctrineDatabase">
				<parameters>
					<parameter name="dsn">mysql://redracer:@localhost/redracer</parameter>
					<parameter name="attributes">
						<parameters>
							<parameter name="AUTOLOAD_TABLE_CLASSES">true</parameter>
							<parameter name="VALIDATE">LENGTHS</parameter>
							<parameter name="AUTO_ACCESSOR_OVERRIDE">true</parameter>
						</parameters>
					</parameter>
					<parameter name="manager_attributes">
						<parameters>
							<parameter name="model_loading">conservative</parameter>
						</parameters>
					</parameter>
					<parameter name="load_models">%core.lib_dir%/doctrine/models</parameter>
				</parameters>
			</database>

		</databases>
	</ae:configuration>
	
</ae:configurations>
