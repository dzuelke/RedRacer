<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
	xmlns="http://agavi.org/agavi/config/parts/validators/1.0"
	xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
	parent="%core.module_dir%/Project/config/validators.xml"
>
	<ae:configuration>
		
		<validators method="read">

			<validator class="AgaviStringValidator" required="false" severity="silent">
				<argument>search</argument>
				<ae:parameters>
					<ae:parameter name="min">1</ae:parameter>
					<ae:parameter name="max">100</ae:parameter>
				</ae:parameters>
			</validator>

			<validator class="RedracerTypeArrayValidator" required="false" severity="silent">
				<argument>projectTypes</argument>
			</validator>

			<validator class="AgaviNumberValidator" required="false" severity="silent">
				<argument>page</argument>
				<ae:parameters>
					<ae:parameter name="type">integer</ae:parameter>
					<ae:parameter name="min">1</ae:parameter>
				</ae:parameters>
			</validator>

			<validator class="RedracerOrderModeValidator" required="false" severity="silent">
				<argument>ordermode</argument>
			</validator>

			<validator class="AgaviInarrayValidator" required="false" severity="silent">
				<argument>orderby</argument>
				<ae:parameters>
					<ae:parameter name="values">name,type,average_rating,number_of_ratings</ae:parameter>
					<ae:parameter name="sep">,</ae:parameter>
					<ae:parameter name="case">false</ae:parameter>
				</ae:parameters>
			</validator>

			<validator class="AgaviNotoperatorValidator" required="false" severity="silent">
				<validator class="RedracerUniqueFieldValueValidator" required="false" severity="silent">
					<argument>user</argument>
					<ae:parameters>
						<ae:parameter name="table_manager">UserManager</ae:parameter>
						<ae:parameter name="field_name">username</ae:parameter>
					</ae:parameters>
				</validator>
			</validator>

		</validators>
		
	</ae:configuration>
</ae:configurations>
